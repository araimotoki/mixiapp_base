<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="<%= AppResources[:application_name] %>" author="<%= AppResources[:author] %>" author_email="<%= AppResources[:author_email] %>" description="">
    <Require feature="opensocial-0.8" />
    <Require feature="views" />
    <Require feature="dynamic-height"/>
    <Require feature="flash" />
  </ModulePrefs>
  <Content type="html">
    <![CDATA[
    
<%= javascript_include_tag "jquery-1.3.2.min" %>
<%= javascript_include_tag "jquery-ui-1.7.2.custom.min" %>
<%= javascript_include_tag "jquery.protoload" %>
<%= javascript_include_tag "jquery.mixigadget" %>
<%= javascript_include_tag "jrails" %>
<%= javascript_include_tag "application" %>

<%= stylesheet_link_tag "style" %>

<script type="text/javascript">
(function(){
  $('#gadget_container').mixigadget({base_url: '<%= "#{request.protocol}#{request.host}:#{request.port}" %>'});

  if (gadgets.views.getCurrentView().getName() == 'canvas') {
    var src    = "http://<%= AppResources[:mixi_domain] %>/ad_application_program_invoker.pl";
    var query  = "appli_id=<%= AppResources[:application_id] %>&amp;ad_id=<%= AppResources[:application_ad_id] %>";
    document.writeln(['<scri','pt src="',src,'?',query,'&ts=',(new Date).getTime(),'">','</scri','pt>'].join(''));
  }
})();
</script>
<div id="gadget_container"></div>

    ]]> 
  </Content>
</Module>
